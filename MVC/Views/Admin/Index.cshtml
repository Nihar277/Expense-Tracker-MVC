@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Custom Theme Styling -->
<style>
    body {
        background-color: #f8fafc;
    }

    .admin-container {
        background: #ffffff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    h3.page-title {
        color: #0d1b2a;
        font-weight: 700;
        font-size: 1.6rem;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 25px;
    }

    h3.page-title::before {
        content: "";
        display: inline-block;
        width: 6px;
        height: 28px;
        background: #f4a261;
        border-radius: 4px;
    }

    #userGrid {
        border-radius: 10px;
        height: 650px !important;
    }

    .k-grid-toolbar {
        background-color: rgb(27, 196, 126) !important;
        color: white !important;
        border: none !important;
        border-radius: 10px 10px 0 0 !important;
        padding: 10px;
    }

    .k-grid-toolbar .k-input {
        border-radius: 8px;
    }

    .k-grid-header {
        background-color: rgb(13, 117, 74) !important;
        color: #ffffff !important;
        font-weight: bold;
    }

    .k-grid-content {
        background-color: #ffffff !important;
    }

    #userGrid .k-grid-content {
        height: 450px !important;
    }

    .k-button {
        border-radius: 25px !important;
        font-weight: 600 !important;
        padding: 6px 15px !important;
    }

    .k-button.k-primary {
        background-color: #f4a261 !important;
        border-color: #f4a261 !important;
        color: #0d1b2a !important;
    }

    .k-button.k-primary:hover {
        background-color: #e59e3e !important;
        color: white !important;
    }

    .status-btn {
        border-radius: 25px;
        font-weight: 600;
        color: white;
        padding: 6px 12px;
        border: none;
        min-width: 90px;
    }

    .status-active {
        background-color: #2ecc71;
    }

    .status-inactive {
        background-color: #e74c3c;
    }

    .shadow-sm {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08) !important;
    }
</style>

<div class="container py-4">
    <div class="admin-container">
        <h3 class="page-title">Admin Panel â€“ Manage Users</h3>

        <div id="userGrid" class="shadow-sm"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#userGrid").kendoGrid({
                dataSource: {
                    transport: {
                        read: {
                            url: "/Admin/GetUsers",
                            dataType: "json",
                            type: "GET"
                        }
                    },
                    schema: {
                        data: function (res) {
                            if (!res.success) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Session Expired!',
                                    text: 'Please login again.'
                                }).then(() => window.location.href = "/Home/Login");
                                return [];
                            }
                            return res.users;
                        },
                        total: function (res) { return res.success ? res.users.length : 0; }
                    },
                    pageSize: 6
                },
                toolbar: ["search"],
                pageable: {
                    refresh: true,
                    pageSizes: [6, 10, 20],
                    messages: {
                        display: "{0} - {1} of {2} records",
                        empty: "No records available"
                    }
                },
                sortable: true,
                filterable: true,
                resizable: true,
                height: 550,
                columns: [
                    {
                        field: "profileImage",
                        title: "Profile",
                        width: 100,
                        template: function (d) {
                            if (!d.profileImage) {
                                return `<div class="d-flex align-items-center justify-content-center border rounded-circle" 
                                                 style="width:60px;height:60px;color:#999;">
                                            <i class="bi bi-person-circle fs-3"></i>
                                        </div>`;
                            }
                            return `<img src='/profile_images/${d.profileImage}' class='rounded-circle border shadow-sm' 
                                                 width='60' height='60'
                                                 onerror="this.onerror=null;this.src='/images/temp-user.png';" />`;
                        }
                    },
                    { field: "name", title: "Name", width: 150 },
                    { field: "email", title: "Email", width: 220 },
                    { field: "gender", title: "Gender", width: 100 },
                    {
                        field: "status",
                        title: "Status",
                        width: 120,
                        template: function (d) {
                            var state = d.status || "Inactive";
                            var cssClass = state === "Active" ? "status-active" : "status-inactive";
                            // use double quotes for attribute and single quotes for the JS string
                            return `<button class="status-btn ${cssClass}" onclick="toggleStatus(${d.userID}, '${state}')">${state}</button>`;
                        }
                    },
                    {
                        title: "Actions",
                        width: 150,
                        template: function (d) {
                            return `<button class='k-button k-primary shadow-sm' onclick='viewExpenses(${d.userID})'>View Expenses</button>`;
                        }
                    }
                ],
                noRecords: true,
                messages: { noRecords: "No users found." }
            });
        });

        function toggleStatus(id, currentState) {
            var action = currentState === "Active" ? "deactivate" : "activate";
            Swal.fire({
                title: `Are you sure?`,
                text: `Do you want to ${action} this user?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: `Yes, ${action}`,
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If you have anti-forgery token validation on the server, include the token here:
                    // var token = $('input[name="__RequestVerificationToken"]').val();
                    // $.post("/Admin/ToggleStatus", { id: id, __RequestVerificationToken: token })...
                    $.post("/Admin/ToggleStatus", { id: id })
                        .done(function (res) {
                            if (res.success) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: `User has been ${action}d.`,
                                    icon: 'success',
                                    timer: 1500,
                                    showConfirmButton: false
                                });
                                $("#userGrid").data("kendoGrid").dataSource.read();
                            } else {
                                Swal.fire('Error!', res.message || 'Status update failed.', 'error');
                            }
                        })
                        .fail(function () {
                            Swal.fire('Error!', 'Request failed. Please try again.', 'error');
                        });
                }
            });
        }

        function viewExpenses(id) {
            window.location.href = "/Admin/ViewExpenses?id=" + id;
        }
    </script>
}
