@model List<MVC.Models.t_transaction>

@{
    ViewData["Title"] = "User Graph & Transactions";



    int userId = ViewBag.UserId ?? 0;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Custom Theme Styling (Matching Admin Panel) -->
<style>
    body {
        background-color: #f8fafc;
    }


<div class="mb-4">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
        &larr; Back to Users List
    </a>
</div>


<div class="demo-section wide mb-5">
    <div class="flex-container d-flex flex-wrap justify-content-around">
       
        <div id="donut-chart" style="width: 45%; height: 400px;"></div>

       
        <div id="bar-chart" style="width: 45%; height: 400px;"></div>
    </div>
</div>

<hr />


<h3 class="mt-5 mb-3">User Transactions — User ID: @userId</h3>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Transaction ID</th>
            <th>Date</th>
            <th>Category</th>
            <th>Amount (₹)</th>
            <th>Payment Mode</th>
            <th>Receipt</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TransID</td>
                    <td>@item.TransDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.Category</td>
                    <td>₹@item.Amount</td>
                    <td>@item.PaymentMode</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ReceiptImage))
                        {
                            <img src="@Url.Content("~/receipt_images/" + item.ReceiptImage)" alt="Receipt" width="60" height="60" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@item.Description</td>
                </tr>
            }
        }
        else
        {
            <!-- Display message if no transactions are found -->
            <tr>
                <td colspan="7" class="text-center text-muted">No transactions found.</td>
            </tr>
        }
    </tbody>
</table>

    .admin-container {
        background: #ffffff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    h1,
    h3 {
        color: #0d1b2a;
        font-weight: 700;
    }

    h1 {
        margin-bottom: 25px;
    }

    h3.page-title::before {
        content: "";
        display: inline-block;
        width: 6px;
        height: 28px;
        background: #f4a261;
        border-radius: 4px;
        margin-right: 10px;
    }

    .btn-back {
        background-color: #3f51b5;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 16px;
        text-decoration: none;
    }

    .btn-back:hover {
        background-color: #2c3e9f;
        color: white;
    }

    .chart-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
        margin-bottom: 40px;
    }

    .chart-box {
        width: 45%;
        height: 400px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        padding: 15px;
    }

    table.table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    table.table thead {
        background-color: rgb(13, 117, 74) !important;
        color: #ffffff !important;
        font-weight: bold;
    }

    table.table tbody tr td {
        vertical-align: middle;
    }

    img.img-thumbnail {
        border-radius: 8px;
        width: 60px;
        height: 60px;
        object-fit: cover;
    }
</style>

<div class="container py-4">
    <div class="admin-container">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="mb-0">User Expense Overview</h1>
            <a asp-controller="Admin" asp-action="Index" class="btn-back">&larr; Back to Users List</a>
        </div>


        <div class="chart-container">
            <div id="donut-chart" class="chart-box"></div>
            <div id="bar-chart" class="chart-box"></div>
        </div>

        <hr />

        <h3 class="mt-5 mb-3">User Transactions — User ID: @userId</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Amount (₹)</th>
                    <th>Payment Mode</th>
                    <th>Receipt</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TransID</td>
                            <td>@item.TransDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.Category</td>
                            <td>₹@item.Amount</td>
                            <td>@item.PaymentMode</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ReceiptImage))
                                {
                                    <img src="@Url.Content("~/receipt_images/" + item.ReceiptImage)" alt="Receipt"
                                        class="img-thumbnail" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@item.Description</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No transactions found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const userId = '@userId';

            // Donut Chart: Expense by Category
            $.ajax({
                type: "GET",
                url: `/User/getUserGraph/${userId}`,
                dataType: "json",
                success: function (data) {
                    if (!data || data.length === 0) {
                        $("#donut-chart").html("<p class='text-center text-muted mt-5'>No expense data available.</p>");
                        return;
                    }

                    $("#donut-chart").kendoChart({
                        title: { text: "Expense Distribution by Category" },
                        legend: { position: "bottom" },
                        seriesDefaults: { type: "donut", startAngle: 150, overlay: { gradient: "none" } },
                        series: [{
                            data: data.map(item => ({ category: item.category, value: item.amount })),
                            labels: { visible: true, position: "outsideEnd", background: "transparent", template: "#= category #: ₹#= value #" }
                            labels: {
                                visible: true,
                                position: "outsideEnd",
                                background: "transparent",
                                template: "#= category #: ₹#= value #"
                            }
                        }],
                        tooltip: { visible: true, template: "#= category #: ₹#= value #" }
                    });
                },
                error: function () {
                    $("#donut-chart").html("<p class='text-danger text-center mt-5'>Error loading chart.</p>");
                }
            });

            // Bar Chart: Monthly Expenses
            // Bar Chart: Monthly Expenses
            $.ajax({
                type: "GET",
                url: `/User/getAllTransactionByMonth/${userId}`,
                dataType: "json",
                success: function (data) {
                    if (!data || data.length === 0) {
                        $("#bar-chart").html("<p class='text-center text-muted mt-5'>No monthly data available.</p>");
                        return;
                    }

                    $("#bar-chart").kendoChart({
                        title: { text: "Monthly Expense Summary" },
                        legend: { visible: false },
                        dataSource: { data: data },
                        series: [{ type: "column", field: "amount", categoryField: "month", name: "Total Expense", color: "#3f51b5" }],
                        valueAxis: { labels: { format: "{0:C}" }, title: { text: "Expense Amount (₹)" }, line: { visible: false } },
                        categoryAxis: { title: { text: "Month" }, labels: { rotation: -45 }, majorGridLines: { visible: false } },
                        series: [{
                            type: "column",
                            data: data.map(item => ({ category: item.month, value: item.amount })),
                            field: "value",
                            categoryField: "category",
                            color: "#f4a261"
                        }],
                        valueAxis: {
                            labels: { format: "₹{0}" },
                            title: { text: "Expense Amount (₹)" },
                            line: { visible: false }
                        },
                        categoryAxis: {
                            labels: { rotation: -45 },
                            title: { text: "Month" },
                            majorGridLines: { visible: false }
                        },
                        tooltip: { visible: true, template: "#= category #: ₹#= value #" }
                    });
                },
                error: function () {
                    $("#bar-chart").html("<p class='text-danger text-center mt-5'>Error loading chart.</p>");
                }
            });

        });
    </script>
}
